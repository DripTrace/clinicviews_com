{
    "compilerOptions": {
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "target": "es2015", // or higher, e.g., "es2017"
        "types": [
            "estree"
            // , "@serwist/next"
        ],
        "typeRoots": ["./node_modules/@types"],
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "dom.iterable", "esnext", "webworker"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        // "moduleResolution": "node",  // Changed to "node"
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/types",
        "out/types/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "surveyjs-core/*",
        "**/*.test.ts",
        "src/ref/embed/*"
    ]
}
